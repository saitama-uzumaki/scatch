      <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white py-2 rounded-lg font-medium">
        Login
      </button>
    </form>

    <div class="my-4 text-center text-gray-400">OR</div>

    <form method="POST" action="/otp-login" class="space-y-3">
      <input type="email" name="email" placeholder="Enter email for OTP login" required class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" />
      <button type="submit" class="w-full bg-green-600 hover:bg-green-700 text-white py-2 rounded-lg font-medium">
        Send OTP to Email
      </button>
    </form>

