<%- include("partials/header") %>

<div class="max-w-xl mx-auto mt-10 px-4">
  <h2 class="text-2xl font-semibold mb-6">Choose Payment Method</h2>

  <form action="/checkout/payment" method="POST" class="space-y-6">
    <div class="bg-gray-100 p-4 rounded-md">
      <label class="flex items-center space-x-3">
        <input type="radio" name="paymentMethod" value="COD" checked class="form-radio text-green-600">
        <span>Cash on Delivery (COD)</span>
      </label>

      <label class="flex items-center space-x-3 mt-3">
        <input type="radio" name="paymentMethod" value="UPI" class="form-radio text-green-600">
        <span>UPI (Pay Later Option)</span>
      </label>

      <!-- You can add more methods here in future -->
    </div>

    <button type="submit" class="bg-green-600 text-white px-6 py-2 rounded-md hover:bg-green-700 w-full">
      Place Order
    </button>
  </form>
</div>

<%- include("partials/footer") %>
